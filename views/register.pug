  .container-fluid
    // title image section
    .top
      h1.big-heading Hello, student!
      p.sub-heading Register for our clubs below!
// Login form
section.container-fluid
  .card.register-container
    // Loginbox
    .card.loginbox
      h1.login-font Register here
      form.form-points
        p Name
        input#name(type='text' name='' placeholder='full name' value=`${user.name}`)
        p Registration number
        input#registeration(type='number' name='' placeholder='reg. no.')
        p Club Name
        input#club-name(type='text' name='' placeholder='club name')
        //-select#club-name.input-options(name='')
          each club in clubs
            option(value='club-name') #{club.name}
          
        br
        p Degree
        select#degree.input-options(name='degree')
          option(value='btech') B.Tech
          option(value='non-btech') Non B.Tech
        br
        p Year
        select#year.input-options(name='year')
          option(value='1st') 1st
          option(value='2nd') 2nd
          option(value='3rd') 3rd
          option(value='4th') 4th
          option(value='5th') 5th
        br
        p Branch
        input#branch(type='text' name='' placeholder='branch')
        p Contact No.
        input#contact(type='number' name='' placeholder='Mobile no.')
        br
        button.btn-form#register-form(type='button' name='button') Register and Pay
        
        br
        br
    // //Loginbox
  // login form
