          .dropdown-menu(aria-labelledby='navbarDropdown')
            if user
              a.dropdown-item#logout-btn(href='#') Logout
              a.dropdown-item(href='#footer') Contacts
            else
              a.dropdown-item(href='/login') Login
              a.dropdown-item(href='signin.html') Sign up
              .dropdown-divider
