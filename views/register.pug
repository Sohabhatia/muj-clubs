    #navbarNavDropdown.collapse.navbar-collapse
      ul.navbar-nav
        // light/dark mode container
        label.switch
          input#m-color(type='checkbox')
          span.slider.round
        li.nav-item
          a.nav-link.nav-txt
            | Dark Mode 
            span.sr-only (current)
        // // light/dark mode container
        li.nav-item
          a.nav-link(href='/')
            | Home 
            span.sr-only (current)
        li.nav-item
